<style>
    .title h3 {
		font-size: 50px;
		font-weight: 700;
        text-align: center;
	}
    h4{
        text-align: center;
    }
</style>
<body>
	<div class="title">
		<h3 class="text">Report Submission</h3>
	</div>
	<hr style="border:3px solid lightgrey;width:65%;">
	<div class="row">
		<div class="col-md-8 mx-auto">
			<div class="card card-body">
				<form action="/content/addReport/{{content.id}}" method="post">
                    <h4>Report {{content.fname}} {{content.lname}}'s post with the following details.</h4>
                    <br>
                    <div class="form-group">
						<label class="font-italic" for="targetId">Content ID</label>
						<input id="targetId" type="text" class="form-control" name="targetId" value="{{content.id}}"
							readonly>
					</div>
                    <div class="form-group">
						<label class="font-italic" for="targetId">User ID</label>
						<input id="targetUserId" type="text" class="form-control" name="targetUserId" value="{{content.userId}}"
							readonly>
					</div>
                    <div class="form-group">
						<label class="font-italic" for="name">User ID</label>
						<input id="name" type="text" class="form-control" name="name" value="{{content.fname}} {{content.lname}}"
							readonly>
					</div>
					<div class="form-group">
						<label class="font-italic" for="reason">Reason</label>
						<textarea class="form-control" id="reason" name="reason" rows="6"></textarea>
					</div>
					
					<button type="submit" class="btn btn-primary">Submit</button>
				</form>
			</div>
		</div>
	</div>
</body>