<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Audiowide">
<style>
  body {
    background-color: whitesmoke;
  }

  h2{
    text-align: center;
    font-family: "Audiowide", sans-serif;
    font-size: 60px;
  }

  table,
  th,
  td {
    border: 1px solid black;
    border-collapse: collapse;
    background-color: lightblue;
  }

  th,
  td {
    padding: 10px;
    text-align: center;
  }

  th {
    background-color: cornflowerblue;
  }

  .wrapper {
    position: relative;
    display: flex;
    min-width: 100px;
  }

  .search-icon {
    position: relative;
    width: 30px;
  }

  .myInput[type="text"] {
    border: 1px solid grey;
    border-radius: 5px;
    height: 45px;
    width: 100%;
    padding: 2px 23px 2px 36px;
    outline: 0;
    background-color: #f5f5f5;
    margin: 5px;
  }

  .myInput[type="text"]:hover,
  #myInput:focus {
    border: 1.5px solid #009688;
    background-color: white;
  }

  .reset {
    height: 50px;
    position: relative;
  }

  .btn-first {
    margin: 0;
    position: absolute;
    top: 30%;
    right: 50%;
    -ms-transform: translateY(-50%);
    transform: translateY(-50%);
    box-sizing: border-box;

    text-align: center;
    cursor: pointer;
    font-size: 14px;
    padding: 5px 20px;
    outline: none;
    background-color: yellowgreen;
    border: none;
    border-radius: 5px;
    box-shadow: 0 5px #95a5a6;
  }

  .btn-first:hover {
    background-color: lightslategrey;
  }

  .btn-first:active {
    background-color: #2ecc71;
    box-shadow: 0 5px #95a5a6;
    transform: translateY(-40%);
  }

  #top {
    display: none;
    position: fixed;
    bottom: 20px;
    right: 30px;
    z-index: 99;
    font-size: 18px;
    border: none;
    outline: none;
    background-color: red;
    color: white;
    cursor: pointer;
    padding: 15px;
    border-radius: 4px;
  }

  .arrow {
    border: solid white;
    border-width: 0 3px 3px 0;
    display: inline-block;
    padding: 3px;
  }

  .up {
    transform: rotate(-135deg);
    -webkit-transform: rotate(-135deg);
  }
</style>

<body onload="Rows()">
  <button onclick="topFunction()" id="top" title="Go to top"><i class="arrow up"></i></button>
  <h2><b>Manage Submissions</b> (Admins)</h2>
  <hr style="border:1px solid black;">
  <link href="https://www.w3schools.com/w3css/4/w3.css" rel="stylesheet" />
  <div class="reset"><button id="buttonReset" onclick="performReset()" class="btn-first">Reset</button></div>
  <div class="wrapper">
    <img class="search-icon"
      src="data:image/svg+xml;utf8;base64," />
    <input type="text" id="CInput" class="myInput" placeholder="Content ID ...">
    <input type="text" id="UInput" class="myInput" placeholder="User ID ...">
    <input type="text" id="Name" class="myInput" placeholder="Name ...">
  </div>
  <br>
  <p id="total"></p>
  <div>
    <table class="table table-striped" id="myTable">
      <thead>
        <tr>
          <th>Content</th>
          <th>Content ID</th>
          <th>User ID</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Contact</th>
          <th>Age</th>
          <th>Gender</th>
          <th>Date</th>
          <th style="background-color: darkorange;">Update</th>
          <th style="background-color: tomato ;">Delete</th>
        </tr>
      </thead>
      <tbody>
        {{#if contents}}
        {{#each contents}}
        <tr>
          <td>
            <a target="_blank" href="{{subURL}}"><img src="{{subURL}}" alt="/img/no-image.jpg"
                class="img-thumbnail img-fluid" width="90" height="40" title="{{sname}}, {{likes}} likes"></a>
          </td>
          <td>{{id}}</td>
          <td>{{userId}}</td>
          <td>{{fname}}</td>
          <td>{{lname}}</td>
          <td>{{phone}}</td>
          <td>{{age}}</td>
          <td>{{gender}}</td>
          <td>{{formatDate dateOfSub 'DD MMM YYYY'}}</td>
          <td><a href="/content/adminUpdateContent/{{id}}">
              <button class="btn btn-warning">Update</button>
            </a></td>
          <td><a href="/content/adminDeleteContent/{{id}}" data-toggle="confirmation" data-title="Confirm delete?">
              <button class="btn btn-danger">Delete</button>
            </a></td>
          {{/each}}
          {{else}}
          <h3>No content posted.</h3>
          {{/if}}
        </tr>
      </tbody>
    </table>
  </div>
</body>

<script>

  function filterTable(event, index) {
    var filter = event.target.value.toUpperCase();
    var rows = document.querySelector("#myTable tbody").rows;
    for (var i = 0; i < rows.length; i++) {
      var firstCol = rows[i].cells[1].textContent.toUpperCase();
      var secondCol = rows[i].cells[2].textContent.toUpperCase();
      var thirdCol = rows[i].cells[3].textContent.toUpperCase() + " " + rows[i].cells[4].textContent.toUpperCase();
      if ((firstCol.indexOf(filter) > -1 && index == 0) || (secondCol.indexOf(filter) > -1 && index == 1) || (thirdCol.indexOf(filter) > -1 && index == 2)) {
        rows[i].style.display = "";
      } else {
        rows[i].style.display = "none";
      }
    }
  }

  document.querySelectorAll('input.myInput').forEach(function (el, idx) {
    el.addEventListener('keyup', function (e) {
      filterTable(e, idx);
    }, false);
  });

  function performReset() {
    document.getElementById("CInput").value = "";
    document.getElementById("UInput").value = "";
    document.getElementById("Name").value = "";
    filterTable(event, 0);
  }

  function Rows() {
    var x = document.getElementById("myTable").rows.length - 1;
    document.getElementById("total").innerHTML = "There are " + x + " total submissions.";
  }

  var mybutton = document.getElementById("top");

  window.onscroll = function () { scrollFunction() };

  function scrollFunction() {
    if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
      mybutton.style.display = "block";
    } else {
      mybutton.style.display = "none";
    }
  }

  function topFunction() {
    document.body.scrollTop = 0;
    document.documentElement.scrollTop = 0;
  }

</script>