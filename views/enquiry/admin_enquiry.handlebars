    <h1 class="display-4">Retrieve Enquiry</h1>
    <link rel="stylesheet" href ="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <br>
    <br>
<div class="container">
{{#if enquiries}}
	<div class="card card-body">
    
    <table>
        <tr>
            <th>Enquiry No.</th>
            <th>Name</th>
            <th>Email</th>
            <th>Topic</th>
            <th>Enquiry</th>
        </tr>
        {{#each enquiries}}
        <tr>
            <td>{{this.id}}</td>
            <td>{{this.name}}</td>
            <td>{{this.email}}</td>
            <td>{{this.topic}}</td>
            <td>{{this.enquiries}}</td>
        </tr>
        {{/each}}
    </table>
    
    <style>
        .fa{
            padding: 10px;
            font-size: 30px;
            width: 50px;
            text-align: center;
            text-decoration: none;
            margin: 10px 2px;
        }

        .fa:hover{
            opacity: 0.7;
        }

        

        table, th, td{
            border: 1px solid black;
            border-collapse: collapse;
        }

        th, td{
            padding: 15px;
            text-align: center;
        }

        th{
            background-color: cornflowerblue ;
        }

        .button1{
            background-color: aquamarine;
            border: none;
            padding: 12px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 12px;
            margin: 6px 4px;
            border-radius: 12px;
            cursor: pointer;
            transition-duration: 0.4s;
        }

        .button2{
            background-color:#A7C7E7;
            border: none;
            padding: 12px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 12px;
            margin: 6px 4px;
            border-radius: 12px;
            cursor: pointer;
            transition-duration: 0.4s;
        }
        .button:hover{
            background-color: white;
        }
    </style>
    </div>
</div>
{{else}}
    <h4>No Enquiry Has Been Received</h4>
{{/if}}
  