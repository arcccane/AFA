<div class="container">
	{{#if events}}
	<div class="card card-body">
		<h3 class="text-primary">Events</h3>
		
		{{#each events}}
		<div class="card border-primary mb-2 w-100 mx-auto">
			<div class="card-header">
				<h5 class="card-title">{{event}}</h5>
			</div>
			<div class="card-body">
				<div class="row">
					<div class="col-sm-12 col-md-12 col-lg-2">
						<a href="{{posterURL}}" data-title="{{event}}" data-toggle="lightbox">
							<img src="{{posterURL}}" alt="Poster unavailable" class="img-thumbnail img-fluid">
						</a>
					</div>

					<div class="col-sm-12 col-md-12 col-lg-8">
						<div class="row"> {{!-- date, time --}}
							<div class="col-sm-12 col-md-6 col-lg-3">
								<p class="font-italic">Date Release</p>
								<p class="text-info">{{formatDate dateRelease 'DD MMM YYYY'}}</p>
							</div>

							<div class="col-sm-12 col-md-6 col-lg-3">
								<p class="font-italic">Time</p>
								<p class="text-info">{{startTime}} - {{endTime}}</p>
							</div>
						</div>
					</div>

					<div class="col-sm-12 col-md-6 col-lg-2">
						<p class="font-italic"></p>
						<a href="/event/edit/{{id}}" class="card-link">
							<i class="fas fa-pencil-alt"></i>
							Edit
						</a>
						<a href="/event/delete/{{id}}" class="card-link" data-toggle="confirmation"
							data-title="Confirm delete?">
							<i class="far fa-trash-alt"></i>
							Delete
						</a>
					</div>
				</div>

			</div>

			<div class="accordion" id="desAccordion{{id}}">
				<div class="card-header" id="headingOne{{id}}">
					<button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseOne{{id}}"
						aria-expanded="false" aria-controls="collapseOne{{id}}">
						Description<i class="fas fa-chevron-down"></i>
					</button>

				</div>

				<div id="collapseOne{{id}}" class="collapse" aria-labelledby="headingOne{{id}}"
					data-parent="#desAccordion{{id}}">
					<div class="card-body">
						{{des}}
					</div>
				</div>
			</div>
		</div>
		{{/each}}
	</div>

</div>
{{else}}
<h3>No event created</h3>
{{/if}}