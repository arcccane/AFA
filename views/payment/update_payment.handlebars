<div class="container">
	<div class="card card-body">
		<h3>Update Payment Information</h3>
		<form action="/cart/update_payment/{{payment.name}}" method="post" id="updatePayment">
			<div class="form-group">
				<div class="row mb-2">
					<div class="col-12 col-sm-12 col-md-12 col-lg-9 mb-4">
						<div class="form-group">
							<label class="font-italic">Card Name</label>
							<input id="cardname" class="form-control" type="text" value="{{payment.cardname}}" name="cardname" onblur="capaitaliseTitle()">
						</div>
						<div class="form-group">
							<label class="font-italic">Card Number</label>
							<input id="number" class="form-control" type="text" value="{{payment.number}}" name="number">
						</div>
						<div class="form-group">
							<label class="font-italic">Expiry Date</label>
							<input id="expiry" class="form-control" type="text" value="{{payment.expiry}}" name="expiry">
						</div>
						<div class="form-group">
							<label class="font-italic">CVC</label>
							<input id="cvc" class="form-control" type="text" value="{{payment.cvc}}" name="cvc">
						</div>
					</div>
				</div>
			</div>
			<br>
			<button id="butAddpayment" type="submit" class="btn btn-primary">Save
			</button>
		</form>
	</div>
</div>




