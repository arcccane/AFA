<div class="container">
	<div class="card card-body">
		<h3>Add Products</h3>
		<form action="/product/createProduct" method="post" id="createProduct">
			<div class="form-group">
				<div class="row mb-2">
					<div class="col-12 col-sm-12 col-md-4 col-lg-8">
						<div class="form-group">
							<label class="font-italic">Product Name</label>
							<input id="name" class="form-control" type="text" name="name" onblur="capaitaliseTitle()" required>
						</div>

						<label class="font-italic">Product Category</label>
						<br>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="radio" id="New Arrival" value="New Arrival" name="category" {{radioCheck product.category 'New Arrival'}} required>
							<label class="form-check-label" for="New Arrival">New Arrival</label>
						</div>
						<br>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="radio" id="Pre-Order" value="Pre-Order" name="category" {{radioCheck product.category 'Pre-Order'}} required>
							<label class="form-check-label" for="Pre-Order">Pre-Order</label>
						</div>
						<br>
						<br>

						<div class="form-group">
							<label class="font-italic">Product ID</label>
							<input id="productid" class="form-control" type="text" name="productid" required>
						</div>
						<div class="form-group">
							<label class="font-italic">Product Price</label>
							<input id="price" class="form-control" type="text" name="price" required>
						</div>

						<div class="form-group">
							<label class="font-italic">Product Manufacturer</label>
							<input id="manufacturer" class="form-control" type="text" name="manufacturer" required>
						</div>

						<div class="form-group">
							<label class="font-italic" for="story">Product Description</label>
							<textarea class="form-control" id="description" name="description" rows="7" required></textarea>
						</div>

					</div>
					<div class="col-14 col-sm-14 col-md-14 col-lg-4 mb-4">
						<label class="font-italic">Product Image</label>
						<input type="file" id="imageUpload" name="imageUpload" accept="image/png,image/jpeg,image/jpg,image/gif">
						<img src="/img/no-image.jpg" alt="" id="image" class="border img-thumbnail img-fluid" style="height:95%;width:100%">
						<input type="hidden" name="imageURL" id="imageURL">
						<div class="font-weight-bold text-danger small" id="imageErr" style="display:none"></div>
					</div>
				</div>
			</div>
			<br>
			<button id="butAddproduct" type="submit" class="btn btn-primary">Save
			</button>
		</form>
	</div>
</div>

