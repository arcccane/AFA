<div class="container-fluid">
        


<h1 class="display-4">Update User Account</h1>

<br>

<form method="POST" action="/user/saveEditedprofile/{{user.id}}?_method=PUT">
  <div class="form-group">
    
  <label for="firstname">First Name</label>
  <input class="form-control" id="firstname" name="firstname" required="" type="text" value="{{user.firstname}}">
  

  </div>
  <div class="form-group">
    
  <label for="lastname">Last Name</label>
  <input class="form-control" id="lastname" name="lastname" required="" type="text" value="{{user.lastname}}">
  

  </div>
  <div class="form-group">
    
  <label for="email">E-mail</label>
  <input class="form-control" id="email" name="email" required="" type="email" value="{{user.email}}">
  

  </div>
  <div class="form-group">
    
  <label for="username">Username</label>
  <input class="form-control" id="username" name="username" required="" style="list-style-type:none" type="text" value="{{user.username}}">
  

  </div>
  <div id="prof">
    <div class="form-group">
      
  <label for="password">Password</label>
  <input class="form-control" id="password" name="password" required="" type="password" value="">
  

    </div>
  </div>
  <input type="submit" value="Submit" class="btn btn-primary">
</form>

    </div>